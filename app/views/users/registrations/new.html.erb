
  <div class="container">

<div class="row">

  <span class="text-danger"><%= render "users/shared/error_messages", resource: resource %></span>

  <div class="col-md-8">
    <h4>Sign up<small class="text-muted">：新規会員登録</small></h4>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


       <div class="field">
        <%= f.label :UserName %><small class="text-muted">：ユーザー名</small><br />
        <small>(2文字以上)</small><br />
        <%= f.text_field :name, autofocus: true, autocomplete: "name", size: "30" %>
      </div>

      <div class="field mt-4">
        <%= f.label :email %><small class="text-muted">：メールアドレス</small><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size: "30" %>
      </div>

      <div class="field mt-4">
        <%= f.label :password %><small class="text-muted">：パスワード</small>
        <% if @minimum_password_length %><br />
        <small>(<%= @minimum_password_length %> 文字以上)</small>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password", size: "30" %>
      </div>

      <div class="field mt-4">
        <%= f.label :password_confirmation %><small class="text-muted">：パスワード確認</small><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", size: "30" %>
      </div>

      <div class="actions">
        <%= f.submit "Sign up", class:"btn btn-outline-secondary mt-3" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>

</div>
</div>

</div>



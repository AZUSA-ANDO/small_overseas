<table>
  <% @spot.comments.each do |comment| %>
    <% comment_user = comment.user %>
    <tr>
    	<td>
    		<%= link_to user_path(comment_user), class: "user_#{comment_user.id}" do %>
      		<%= attachment_image_tag comment_user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg", size: "50x50" %><br>
      		<%= comment_user.name %>
    		<% end %>
    	</td>
    	<td><%= comment.opinion %></td>
    	<% if current_user == comment_user %>
      	<td><%= link_to 'Destroy', spot_comment_path(comment.spot_id, comment.id), class: 'btn-sm btn-danger', method: :delete %></td>
    	<% end %>
    </tr>
  <% end %>
</table>
<!--<%#= form_with model:[@spot,@comment], local: true do |f| %>-->
<%= form_with(model:[@spot,@comment], remote: true, method: :post, value: "") do |f| %>
  <%= f.text_area :opinion, size:"90x5" %><br>
  <%= f.submit '送信'%>
<% end %>
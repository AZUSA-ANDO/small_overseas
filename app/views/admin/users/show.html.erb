<div class="container">
  <h2 class="mt-4"><%= @user.name %>さん</h2>
  <div class="row mt-4">
    <div class="col-5">
      <table class="table">
      <tr>
        <th>User ID</td>
        <td><%= @user.id %></td>
      </tr>
      <tr>
        <th>Profile Photo</td>
        <td><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'80x80' ) %></td>
      </tr>
      <tr>
        <th>User name</th>
        <td><%= @user.name %></td>
      </tr>
      <tr>
        <th>email</th>
        <td><%= @user.email%></td>
      </tr>
      <tr>
        <th>status</th>
        <td><% if @user.is_deleted == false %>
        <p class="text-success">有効</p>
           <% else %>
         <p>退会</p>
          <% end %>
      </tr>
      </table>

    </div>

    <div class="col-8 mx-auto">
      <%= link_to "編集する", edit_admin_user_path, class:"btn btn-sm btn-info mx-3" %>
    </div>
  </div>
</div>
<div class="container">
<div class="row">
  <span class="text-danger"><%= render "users/shared/error_messages", resource: resource %></span>
    <div class= "col-md-8">
      <h4>Log in<small class="text-muted">：ログイン</small></h4>
      <p class="text-danger"><%= flash[:error] %></p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email %><small class="text-muted">：メールアドレス</small><br/>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" , size: "30"%>
          </div>

          <div class="field">
            <%= f.label :password %><small class="text-muted">：パスワード</small><br/>
            <%= f.password_field :password, autocomplete: "current-password", size: "30" %>
          </div>


          <div class="actions">
            <%= f.button :type => "submit", class:"btn btn-outline-secondary mt-3" do %>
            Log in<i class="fas fa-sign-in-alt"></i></i>
          　<% end %>
          </div>
        　<% end %>

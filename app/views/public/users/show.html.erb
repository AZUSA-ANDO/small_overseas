
<div class='container px-sm-0'>
  <div class='row'>
    <div class='col-md-3 pt-3'>

<table class='table'>
  <tr><%= attachment_image_tag(@user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg") %></tr>
  <tr>
	  <th>name</th>
	  <th><%= @user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= @user.introduction %></th>
  </tr>

  <tr>
    <th>follows</th>
    <th class="follow_<%= @user.id %>"><%= render "public/relationships/follow-count", user: @user %></th>
      <%#= link_to @user.follower.count, user_follows_path(@user) %>
  </tr>
  <tr>
    <th>followers</th>
    <th class="follower_<%= @user.id %>"><%= render "public/relationships/follower-count", user: @user %></th>
      <%#= link_to @user.followed.count, user_followers_path(@user) %>
  </tr>

  <% if user_signed_in? %>
  <tr>

    <th class="follow-btn_<%= @user.id %>"><%= render "public/relationships/follow-btn", user: @user %>
      <!--ここから-->
      <!--<%# unless @user.id == current_user.id %>-->
      <!--<%# if current_user.following?(@user) %>-->
      <!--  <%#= link_to "Unfollow", user_relationships_path(@user.id), method: :delete %>-->
      <!--  <%# else %>-->
      <!--  <%#= link_to "Follow", user_relationships_path(@user.id), method: :post %>-->
      <!--  <%# end %>-->
      <!--<%# end %>-->
      <!--ここまでフォローボタン-->
    </th>
    <th>
        <% if current_user != @user && current_user.following?(@user) && @user.following?(current_user) %>
        <% if @isRoom == true %>
          <p class="user-show-room"><a href="/rooms/<%= @roomId %>"><i class="fas fa-envelope fa-lg"></i></a>
        <% else %>
          <%= form_for @room do |f| %>
            <%= fields_for @entry do |e| %>
              <%= e.hidden_field :user_id, value: @user.id %>
            <% end %>
            <%= f.submit "Start Chat", class:"btn btn-secondary user-show-chat"%>
          <% end %>
        <% end %>
        <% end %>

      </th>
    </tr>
    <% end %>
</table>

    <% if user_signed_in? %>
      <div class='mt-3 text-center'>
        <% if @user.id == current_user.id %>
        <%= link_to 'Edit',edit_user_path(@user),class: "btn btn-outline-secondary" %>
        <%= link_to "Withdraw", quit_check_users_path, class: 'btn btn-outline-secondary ml-4' %>
        <% end %>
      </div>
      <% end %>
    </div>



     <div class='col-md-9'>
        <h3>Post list..</h3>
        <p>Click the photo to go to the details page!!
        <button type="button" class="btn btn-secondary rounded-circle p-0" style="width:2rem;height:2rem;">
        <%= link_to "＋",new_spot_path %>
        </button>
        </p>
      <div class="row">
           <ul>
       <% @spots.each do |spot| %>
       <li>
         <div class="photo">

           <%= link_to spot_path(spot.id) do %>
           <!--ここから-->

          <%# spot.spot_images.each do |image| %>
          <% spot.spot_images.first(1).each do |image| %>
          <%= attachment_image_tag image, :image, format: 'jpeg', class:"contain" %>
          <% end %>

          <!--ここまで-->
           <%#= attachment_image_tag spot, :spot_image, format: 'jpeg', class: "contain" %>
           <% if user_signed_in? %>
           <div class="favorite-btn_<%= spot.id %>">
             <%= render "public/favorites/favorite-btn", spot: spot %>
           </div>
           <% end %>
         </div>
       <% end %>

        <table class="table txt">
　　　　　<tr>
　　　　　　<td>Area<small class="text-muted">：エリア</small></td>
　　　　　　<td><%= spot.japan_area %></td>
          </tr>
          <tr>
            <td>Atmosphere<small class="text-muted">：雰囲気</small></td>
            <td><%= spot.overseas_area.name %></td>
          </tr>
          <tr>
            <td>Address<small class="text-muted">：住所</small></td>
            <td><%= spot.address %></td>
          </tr>
           <tr>
            <td>Spot name<small class="text-muted">：スポット名</small></td>
            <td><%= spot.name %></td>
          </tr>
          <tr>
            <td>Spot introduction<small class="text-muted">：紹介文</small></td>
            <td><%= spot.introduction %></td>
          </tr>
          <tr>
            <td></td>
            <td><small class="text-muted"><%= spot.created_at.to_s(:datetime) %></small></td>
          </tr>
        </table>
       </li>
       <% end %>
     </ul>
      </div>
     </div>
    </div>
  </div>
</div>

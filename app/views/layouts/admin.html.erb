<!DOCTYPE html>
<html>
  <head>
    <title>SmallOverseas</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <!--ここからヘッダー-->
    <header class="mt-3">

    <div class="text-right mr-5">
      <% if admin_signed_in? %>
        <%= link_to "User", admin_users_path, class: "navbar-item btn btn-secondary" %>
        <%= link_to "Overseas Area",admin_overseas_areas_path, class: "navbar-item btn btn-secondary" %>
        <%= link_to "Sign out", destroy_admin_session_path, method: :delete, class: "navbar-item btn btn-secondary" %>
      <% end %>
    </div>
    </header>

    <%= yield %>
  </body>
</html>

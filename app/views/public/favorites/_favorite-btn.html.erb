<% if spot.favorited_by?(current_user) %>
  <%= link_to spot.favorites.count, spot_favorites_path(spot), method: :delete, remote: true, class: "fas fa-heart unlike-btn" %>
<% else %>
  <%= link_to spot.favorites.count, spot_favorites_path(spot), method: :post, remote: true, class: "fas fa-heart like-btn" %>
<% end %>
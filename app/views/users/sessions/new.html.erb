          <div class="mt-5">
          <h4 classs="mt-4">Sign up<small class="text-muted">：新規会員登録</small></h4>
          <%= link_to sign_up_path, class:"btn btn-outline-secondary mt-1" do %>
          Sign up<i class="fas fa-user-plus"></i>
          <% end %>
          </div>
      </div>
 </div>
</div>
